{
  "name": "koompi-typing",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": {
    "name": "KOOMPI",
    "email": "support@koompi.com"
  },
  "description": "KOOMPI Typing Tutor - Learn to type in English and Khmer",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p electron/tsconfig.json && electron-builder",
    "preview": "vite preview",
    "generate": "bun run scripts/generate-content.ts",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:3000 && tsc -p electron/tsconfig.json && electron .\"",
    "electron:build": "vite build && tsc -p electron/tsconfig.json && electron-builder"
  },
  "build": {
    "appId": "com.koompi.typing",
    "productName": "koompi-typing",
    "directories": {
      "output": "dist-electron-build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "linux": {
      "target": ["pacman"],
      "category": "Education",
      "icon": "public/icon.png",
      "desktop": {
        "entry": {
          "Name": "KOOMPI Typing",
          "Icon": "/opt/koompi-typing/resources/icon.png"
        }
      }
    },
    "pacman": {
      "depends": [
        "c-ares",
        "ffmpeg",
        "gtk3",
        "libevent",
        "libvpx",
        "libxslt",
        "libxss",
        "minizip",
        "nss",
        "re2",
        "snappy",
        "libnotify",
        "libappindicator-gtk3"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}